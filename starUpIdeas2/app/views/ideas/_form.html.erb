    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select(:category, options_for_select([['Health', 'Health'], ['Technology', 'Technology'], ['Education', 'Education'], ['Finance', 'Finance'], ['travel', 'Travel']])) %>
  </div>
  <div class="field">
    <%= f.label :tags %><br>
