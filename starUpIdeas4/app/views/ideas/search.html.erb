<h1>Search Results: </h2>
<div class="row">
  <% @ideas.each do |idea| %>
    <div class="col-md-6">
      <div class="thumbnail">
        <div class="row">
          <div class="col-6 col-md-6">
            <h1><%= idea.title %></h1>
          </div>
          <div class="col-6 col-md-6">
            <h3><%= idea.industry %></h3>
          </div> 
        </div>
        <p>Description:</p>
        <p><%= idea.description %></p>
        <% if user_signed_in? %>
          <%= link_to 'Check Idea', idea, class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>