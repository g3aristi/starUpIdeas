<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-6 col-md-4">
        <h1><%= @idea.title %></h1>
      </div>
      <div class="col-6 col-md-8">
        <h3><%= @idea.industry %></h3>
      </div>
      <div class="col-6 col-md-12">
      	<h4>Tags:<%= @idea.tags %></h4>
      </div>
      <div class="col-6 col-md-12">
      	<p>Description:</p>
      	<p><%= @idea.description %></p>
      </div>
      <div class="col-6 col-md-12">
      	<p>Created by:</p>
      	<p><%= @idea.user_id %></p>
      	<p><%= current_user.email %></p>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-primary btn-lg"  %>
<%= link_to 'Back', ideas_path, class: "btn btn-primary btn-lg"  %>
